<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape
            android:shape="rectangle" android:padding = "10dp">
            <corners android:radius="8dp"/>
            <solid android:color="@color/disabled"/>
            <stroke
                android:width="2dp"
                android:color="@color/disabled" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle" android:padding = "10dp">
                    <corners android:radius="8dp"/>
                    <solid android:color="@color/loadingBackground"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/loadingBackground" />
                </shape>
            </item>
            <item>
                <shape
                    android:shape="rectangle" android:padding = "10dp">
                    <corners android:radius="8dp"/>
                    <solid android:color="@color/sub_button_helper"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/sub_button_helper" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <shape
            android:shape="rectangle" android:padding = "10dp">
            <corners android:radius="8dp"/>
            <solid android:color="@color/sub_button_helper"/>
            <stroke
                android:width="2dp"
                android:color="@color/sub_button_helper" />
        </shape>
    </item>
</selector>